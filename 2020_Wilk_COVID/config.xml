    <TagsSearch>
        <protocol>split_seq</protocol> <!-- seq-well has the same format as split-seq -->
        <MultipleBarcodeSearch>
            <barcode_starts>0</barcode_starts>
            <barcode_lengths>12</barcode_lengths>
            <umi_start>12</umi_start>
            <umi_length>8</umi_length>
